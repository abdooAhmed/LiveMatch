@model OnMatch.Models.ServerLink

@{
    ViewData["Title"] = "AddServerLink";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddServerLink</h1>

<h4>ServerLink</h4>
<hr />
<div class="row" dir="ltr">
    <div class="col-md-4">
        <form asp-action="AddServerLink">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Link" class="control-label"></label>
                <input asp-for="Link" class="form-control" />
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServerNameId" class="control-label"></label>
                <select asp-for="ServerNameId" class="form-control" asp-items="ViewBag.ServerId"></select>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
