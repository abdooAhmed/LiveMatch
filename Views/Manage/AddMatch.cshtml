@model OnMatch.Models.Match

@{
    ViewData["Title"] = "AddMatch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddMatch</h1>

<h4>Match</h4>
<hr />
<div class="row" dir="ltr">
    <div class="col-md-4">
        <form asp-action="AddMatch">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="club1Id" class="control-label"></label>
                <select asp-for="club1Id" class="form-control" asp-items="ViewBag.clubs"></select>
            </div>
            <div class="form-group">
                <label asp-for="result1" class="control-label"></label>
                <input asp-for="result1" class="form-control" />
                <span asp-validation-for="result1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="club2Id" class="control-label"></label>
                <select asp-for="club2Id" class="form-control" asp-items="ViewBag.clubs"></select>
            </div>
            <div class="form-group">
                <label asp-for="result2" class="control-label"></label>
                <input asp-for="result2" class="form-control" />
                <span asp-validation-for="result2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LeagueId" class="control-label"></label>
                <select asp-for="LeagueId" class="form-control" asp-items="ViewBag.leagues"></select>
            </div>
            <div class="form-group">
                <label asp-for="date" class="control-label"></label>
                <input asp-for="date" class="form-control" />
                <span asp-validation-for="date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="stadium" class="control-label"></label>
                <input asp-for="stadium" class="form-control" />
                <span asp-validation-for="stadium" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServerNameId" class="control-label"></label>
                <select asp-for="ServerNameId" class="form-control" asp-items="ViewBag.ServerId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
